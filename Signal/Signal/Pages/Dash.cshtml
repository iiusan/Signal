@page
@using System.Security.Claims;

@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = "_Layout";
}

<div class="container">
    <div class="col-lg-12">
        <div class="row">
            @await Component.InvokeAsync("Admin")
        </div>
        <br />
        <div class="row">
            <h4>User list</h4>
        </div>
        <div class="row">
            @await Component.InvokeAsync("AppUsers")
        </div>
    </div>
</div>



<!-- Modal -->
<div id="add-admin" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Admin for:</h4>
            </div>
            <form asp-controller="AjaxCommands" asp-action="AddAdmin" data-ajax-method="post" data-ajax-success="successfullAdd" data-ajax="true">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="#add-email">Email address:</label>
                        <input type="email" name="email" />
                        <span class="red-text" hidden>An error ocurrend!</span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default">Add</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>

    </div>
</div>

<!-- Modal -->
<div id="remove-admin" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Renove admin for:</h4>
            </div>
            <form asp-controller="AjaxCommands" asp-action="RemoveAdmin" data-ajax-method="post" data-ajax-success="successfullAdd" data-ajax="true">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="#add-email">Email address:</label>
                        <input type="email" name="email" />
                        <span class="red-text" hidden>An error ocurrend!</span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default">Remove</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>

    </div>
</div>


